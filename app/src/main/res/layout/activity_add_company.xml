<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddCompany"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activity_upload">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                android:padding="20dp"
                android:background="#f2f1f1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Register Company"
                    android:textAlignment="center"
                    android:textColor="@color/purple"
                    android:textSize="30sp" />

                <ImageView
                    android:id="@+id/uploadImage"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:scaleType="fitCenter"
                    android:tooltipText="upload Logo Company"
                    android:autofillHints="upload Logo"
                    android:src="@drawable/baseline_cloud_upload_24" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:id="@+id/companyname"
                    android:background="@drawable/lavender_border"
                    android:layout_marginTop="20dp"
                    android:padding="16dp"
                    android:hint="Enter topic name"
                    android:gravity="start|center_vertical"
                    android:textColor="@color/lavender"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:id="@+id/passwordcopmany"
                    android:background="@drawable/lavender_border"
                    android:layout_marginTop="20dp"
                    android:padding="16dp"
                    android:hint="Enter Password"
                    android:gravity="start|center_vertical"
                    android:textColor="@color/lavender"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:id="@+id/companyadress"
                    android:background="@drawable/lavender_border"
                    android:layout_marginTop="20dp"
                    android:padding="16dp"
                    android:hint="Enter adress"
                    android:gravity="start|center_vertical"
                    android:textColor="@color/lavender"/>


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:id="@+id/companytype"
                    android:background="@drawable/lavender_border"
                    android:layout_marginTop="20dp"
                    android:padding="16dp"
                    android:hint="Enter type Company"
                    android:gravity="start|center_vertical"
                    android:textColor="@color/lavender"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:id="@+id/companyidentity"
                    android:background="@drawable/lavender_border"
                    android:layout_marginTop="20dp"
                    android:padding="16dp"
                    android:hint="identity Number Company"
                    android:gravity="start|center_vertical"
                    android:textColor="@color/lavender"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:id="@+id/companyphone"
                    android:background="@drawable/lavender_border"
                    android:layout_marginTop="20dp"
                    android:padding="16dp"
                    android:hint="Enter Phone"
                    android:gravity="start|center_vertical"
                    android:textColor="@color/lavender"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:id="@+id/comapnyemail"
                    android:background="@drawable/lavender_border"
                    android:layout_marginTop="20dp"
                    android:padding="16dp"
                    android:hint="Enter Email"
                    android:gravity="start|center_vertical"
                    android:textColor="@color/lavender"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:id="@+id/CreatedBy"
                    android:background="@drawable/lavender_border"
                    android:layout_marginTop="20dp"
                    android:padding="16dp"
                    android:hint="Enter Markter name"
                    android:gravity="start|center_vertical"
                    android:textColor="@color/lavender"/>

                <Button
                    android:id="@+id/saveButton"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="20dp"
                    android:text="Save"
                    android:backgroundTint="@color/purple"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    app:cornerRadius="20dp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="back to Home"
                    android:id="@+id/Back"
                    android:textColor="@color/purple"
                    android:textAlignment="center">

                </TextView>

            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </ScrollView>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/RequestCard"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        ><ImageView
        android:id="@+id/icon"
        android:layout_width="100dp"
        android:layout_height="300dp"
        android:background="@color/grey"
        android:src="@drawable/baseline_person_24"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Requestphone"
            android:text="@string/Phone"
            android:layout_toEndOf="@+id/icon"
            android:textColor="@color/purple"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"

            android:layout_below="@id/namehint"
            android:layout_marginStart="10dp"
            android:maxLines="1"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Requestname"
            android:text="@string/EnterMarketerName"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_toEndOf="@id/namehint"
            android:layout_marginStart="10dp"
            android:layout_alignTop="@id/namehint"
            android:textAlignment="center"
            android:maxLines="1"
            android:layout_marginBottom="12dp"/>
        <TextView
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:id="@+id/namehint"
            android:text="@string/Name"
            android:textColor="@color/purple"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_toEndOf="@+id/icon"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp" />

        <TextView
            android:id="@+id/phone_m"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_alignTop="@id/Requestphone"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@id/namehint"
            android:text="@string/Phone"
            android:textColor="@color/black"
            android:textSize="15sp" />
        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/identitynumber_m"
            android:text="@string/IdentityCardNumber"
            android:textColor="@color/purple"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@+id/icon"
            android:layout_marginStart="10dp"
            android:layout_below="@+id/phone_m"
            />

        <TextView
            android:id="@+id/Requestidentity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/identitynumber_m"
            android:layout_marginTop="10dp"
            android:text="@string/IdentityCardNumber"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_alignTop="@id/identitynumber_m"
            android:layout_toEndOf="@id/identitynumber_m"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"


            />

        <TextView
            android:id="@+id/email_M"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Requestidentity"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@+id/icon"
            android:text="@string/Email"
            android:textColor="@color/purple"
            android:textSize="16sp"
            android:textStyle="bold"


            />
        <TextView
            android:id="@+id/Requestemail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/identitynumber_m"
            android:layout_marginTop="10dp"
            android:text="@string/Email"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_alignTop="@id/email_M"
            android:layout_toEndOf="@id/identitynumber_m"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"


            />

        <TextView
            android:id="@+id/adress_m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/Address"
            android:textColor="@color/purple"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_below="@+id/email_M"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/icon"
            android:layout_marginBottom="10dp"/>


        <TextView
            android:id="@+id/Requestadress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/Address"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_below="@id/Requestemail"
            android:layout_alignTop="@id/adress_m"
            android:layout_toEndOf="@id/adress_m"
            android:layout_marginStart="70dp"
            android:layout_marginBottom="10dp"


            />


            <Button
                android:layout_width="120dp"
                android:id="@+id/approved"
                android:layout_height="40dp"
                android:layout_below="@id/Requestadress"
                android:layout_toEndOf="@+id/icon"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="20dp"
                android:text="@string/Approved"
                android:backgroundTint="@color/lavender"
               />
        <Button
            android:id="@+id/rejacted"
            android:layout_width="120dp"
            android:layout_height="40dp"

            android:layout_marginBottom="20dp"
            android:layout_below="@id/Requestadress"
            android:layout_marginStart="20dp"
            android:backgroundTint="#DDCF1818"
            android:text="@string/Rejected"
            android:layout_toEndOf="@+id/approved"/>



    </RelativeLayout>

</androidx.cardview.widget.CardView>
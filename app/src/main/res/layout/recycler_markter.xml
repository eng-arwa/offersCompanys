<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/markterCard"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        ><ImageView
        android:id="@+id/icon"
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:src="@drawable/baseline_person_24"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/phonemarkter"
            android:text="phone"
            android:layout_toEndOf="@+id/icon"
            android:textColor="@color/lavender"
            android:textSize="15sp"

            android:layout_below="@id/namehint"
            android:layout_marginStart="10dp"
            android:maxLines="1"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fullName"
            android:text="fullName"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_toEndOf="@id/namehint"
            android:layout_marginStart="98dp"
            android:layout_alignTop="@id/namehint"
            android:maxLines="1"
            android:layout_marginBottom="12dp"/>
        <TextView
            android:id="@+id/adress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/email"
            android:layout_alignTop="@id/adress_m"
            android:layout_marginStart="98dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="5dp"


            android:layout_toEndOf="@+id/adress_m"
            android:text="Adress"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/namehint"
            android:text="name"
            android:textColor="@color/lavender"
            android:textSize="15sp"
            android:layout_toEndOf="@+id/icon"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp" />

        <TextView
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/phonemarkter"
            android:layout_marginStart="98dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@id/phonemarkter"
            android:text="phone"
            android:textColor="@color/black"
            android:textSize="15sp" />
        <TextView
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:id="@+id/identitynumber_m"
            android:text="Identity Number"
            android:textColor="@color/lavender"
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/icon"
            android:layout_marginStart="10dp"
            android:layout_below="@+id/phone"
            />

        <TextView
            android:id="@+id/identityNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/identitynumber_m"
            android:layout_marginTop="0dp"
            android:text="identitiy"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_alignTop="@id/identitynumber_m"
            android:layout_toEndOf="@id/identitynumber_m"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="5dp"


            />
        <TextView
            android:id="@+id/email_M"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Email"
            android:textColor="@color/lavender"
            android:layout_toEndOf="@+id/icon"
            android:textSize="15sp"
            android:layout_below="@+id/identityNumber"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="5dp"


            />
        <TextView
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/identitynumber_m"
            android:layout_marginTop="0dp"
            android:text="email"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_alignTop="@id/email_M"
            android:layout_toEndOf="@id/identitynumber_m"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="5dp"


            />

        <TextView
            android:id="@+id/adress_m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Adress"
            android:textColor="@color/lavender"
            android:textSize="15sp"
            android:layout_below="@+id/email_M"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/icon"
            android:layout_marginBottom="5dp"/>



        <ImageButton
            android:clickable="true"
            android:id="@+id/D_markter"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:contentDescription="click"
            android:padding="5dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="8dp"
            android:background="@drawable/lavender_border2"
            android:backgroundTint="@color/purple"
            android:layout_marginBottom="8dp"
            android:pointerIcon="hand"
            android:src="@drawable/baseline_close_24" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
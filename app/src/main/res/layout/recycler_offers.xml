<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/offersCard"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/recImageCompany"
            android:src="@drawable/baseline_image_24"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="40dp"

            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded"/>

        <TextView
            android:id="@+id/recTitleCompany"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:layout_toEndOf="@id/recImageCompany"
            android:fontFamily="sans-serif"
            android:text="@string/Title"
            android:textColor="@color/purple"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/recLangCompany"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_toEndOf="@id/rec_CodeD"

            android:layout_below="@id/rec_A"
            android:text="@string/Price"
            android:paddingEnd="10dp"
            android:textColor="@color/lavender"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/recDescCompany"
            android:text="@string/desc"
            android:textColor="@color/black"
            android:fontFamily="sans-serif"
            android:textSize="15sp"
            android:layout_toEndOf="@id/recImageCompany"
            android:layout_below="@id/recTitleCompany"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:maxLines="1"
            android:layout_marginBottom="12dp"/>
        <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:id="@+id/recprice_Btext"
            android:text="@string/BeforePrice"
            android:textColor="@color/black"
            android:fontFamily="sans-serif"
            android:textSize="15sp"
            android:layout_toEndOf="@id/recImageCompany"
            android:layout_below="@id/recDescCompany"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:maxLines="1"
            android:layout_marginBottom="12dp"/>
        <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:id="@+id/rec_B"
            android:text="@string/desc"
            android:textColor="@color/black"
            android:fontFamily="sans-serif"
            android:textSize="15sp"
            android:layout_toEndOf="@id/recprice_Btext"
            android:layout_below="@id/recDescCompany"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:maxLines="1"
            android:layout_marginBottom="12dp"/>
        <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/recImageCompany"
            android:id="@+id/rec_AText"
            android:text="@string/AfterPrice"
            android:textColor="@color/black"
            android:fontFamily="sans-serif"
            android:textSize="15sp"
            android:layout_below="@id/rec_B"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:maxLines="1"
            android:layout_marginBottom="12dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/rec_AText"
            android:id="@+id/rec_A"
            android:text="@string/desc"
            android:textColor="@color/black"
            android:fontFamily="sans-serif"
            android:textSize="15sp"
            android:layout_below="@id/rec_B"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:maxLines="1"
            android:layout_marginBottom="12dp"/>
        <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/recImageCompany"
            android:id="@+id/rec_CodeD"
            android:text="@string/DiscountCode"
            android:textColor="@color/black"
            android:fontFamily="sans-serif"
            android:textSize="15sp"
            android:layout_below="@id/rec_A"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:maxLines="1"
            android:layout_marginBottom="12dp"/>
        <ImageButton
            android:clickable="true"
            android:id="@+id/D_Offer"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:contentDescription="click"
            android:layout_marginEnd="8dp"

            android:padding="5dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="8dp"
            android:background="@drawable/lavender_border2"
            android:backgroundTint="@color/purple"
            android:layout_marginBottom="8dp"
            android:pointerIcon="hand"
            android:src="@drawable/baseline_delete_forever_24" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>